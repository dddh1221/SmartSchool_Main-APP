<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashThem" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="LoginEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlNormal">@color/normalWhite</item>
        <item name="android:textColor">@color/normalWhite</item>
        <item name="android:textColorHint">@color/normalWhite</item>
        <item name="android:textColorHighlight">@color/normalWhite</item>
        <item name="android:colorAccent">@color/normalWhite</item>
    </style>

</resources>
